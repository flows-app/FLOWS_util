{
    "id": "FLOWS/util/newmail",
    "lambda": "lambda-arn",
    "role": "iam-arn",
    "output": {
        "schema": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "description": "datetime",
            "type": "object",
            "properties": {
                "mail": {
                    "type": "string"
                }
            },
            "required": ["mail"]
        },
        "examples": {
            "result": {
                "mail": "whatever"
            }
        }
    },
    "type": "event",
    "description": "triggers when a new mail arrives at a flows.app endpoint",
    "icon": "https://flows.app/favicon.png",
    "billing": "standard"
}
